{% extends 'base.html.twig' %}

{% block title %}{% trans %}Sugerencias{% endtrans %} | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <h1 class="fw-light text-center">{% trans %}Sugerencias{% endtrans %}</h1>
        <p class="lead text-muted">
            {% trans %}¿Tienes una buena idea para el congreso?{% endtrans %}
            {% trans %}Rellena el siguiente formulario para hacernos llegar tus sugerencias o propuestas.{% endtrans %}
        </p>
    </div>
    {{ form_start(form) }}
        <div class="row g-3">
            <div class="col-sm-6">
                {{ form_row(form.name, {'label': 'Nombre'|trans, 'attr': {'class': 'form-control'}, 'label_attr': {'class': 'form-label'}}) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.email, {'label': 'Correo electrónico'|trans, 'attr': {'class': 'form-control'}, 'label_attr': {'class': 'form-label'}}) }}
            </div>
            <div class="col-sm-12">
                {{ form_row(form.message, {'label': 'Mensaje'|trans, 'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Escribe aquí tu sugerencia.'}, 'label_attr': {'class': 'form-label'}}) }}
            </div>
        </div>
        {{ form_row(form.submit, { 'label': 'Enviar la sugerencia'|trans, 'attr': {'class': 'btn-primary btn-lg w-100 mt-4'} }) }}
    {{ form_end(form) }}
{% endblock %}
